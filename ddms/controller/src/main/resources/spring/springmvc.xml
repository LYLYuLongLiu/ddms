<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <!-- 默认的注解映射的支持 -->
    <mvc:annotation-driven/>

    <!-- 自动扫描该包，使SpringMVC认为包下用了@controller注解的类是控制器 -->
    <context:component-scan base-package="cn.wisdsoft.ddms.controller"/>

    <!-- 定义跳转的文件的前后缀 ，视图模式配置 -->
    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- 这里的配置我的理解是自动给后面action的方法return的字符串加上前缀和后缀，变成一个 可用的url地址 -->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--  资源映射  -->
    <mvc:resources mapping="/css/**" location="/WEB-INF/css/" />
    <mvc:resources mapping="/js/**" location="/WEB-INF/js/" />
    <mvc:resources mapping="/image/**" location="/WEB-INF/image/" />

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LoginInterceptors" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**/add*"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LogInterceptors" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**/insert*"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LogInterceptors" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**/del*"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LogInterceptors" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**/update*"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LogInterceptors" />
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/**/del*"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/judge" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/image/**" />
            <bean class="cn.wisdsoft.ddms.interceptors.LogInterceptors" />
        </mvc:interceptor>
    </mvc:interceptors>
